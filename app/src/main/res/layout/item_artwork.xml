<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/artContainer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/bg_art_item"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/artImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corners_bg" />

        <!-- Dark overlay for selected state -->
        <View
            android:id="@+id/selectedOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/overlay_rounded"
            android:visibility="gone" />

        <!-- Tick icon for selected -->
        <ImageView
            android:id="@+id/tickOverlay"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|top"
            android:layout_margin="6dp"
            android:src="@drawable/ic_checked"
            android:backgroundTint="@android:color/white"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/artName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="image.jpg"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />
</LinearLayout>
